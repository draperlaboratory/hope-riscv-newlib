.PHONY: all
.PHONY: install
.PHONY: clean

ISP_PREFIX ?= /opt/isp/

CONFIGURE_OPTIONS += --prefix=$(ISP_PREFIX)
CONFIGURE_OPTIONS += --target=riscv32-unknown-elf
CONFIGURE_OPTIONS += AR_FOR_TARGET=riscv32-unknown-elf-ar AS_FOR_TARGET=riscv32-unknown-elf-as LD_FOR_TARGET=riscv32-unknown-elf-ld RANLIB_FOR_TARGET=riscv32-unknown-elf-ranlib
CONFIGURE_OPTIONS += CFLAGS_FOR_TARGET="-O0 -g -fuse-init-array -fno-integrated-as"
CONFIGURE_OPTIONS += CC_FOR_TARGET="clang -ffreestanding --target=riscv32-unknown-elf -ccc-gcc-name riscv32-unknown-elf-gcc -fuse-init-array -fno-integrated-as"

all: build/Makefile
	$(MAKE) -C build

build/Makefile:
	mkdir -p build
	cd build; ../configure $(CONFIGURE_OPTIONS)

install:
	$(MAKE) -C build install

clean:
	$(RM) -r build
